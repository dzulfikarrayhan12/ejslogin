<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Inviso Login & Register dengan Background Slideshow</title>

  <!-- Remix Icon -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

 <div class="absolute inset-0 -z-10 slideshow-background overflow-hidden">
  <% for (let i = 1; i <= 10; i++) { %>
    <img src="/images/bg/bg<%= i %>.jpg"
      class="w-full h-full object-cover absolute inset-0 transition-opacity duration-1000 <%= i === 1 ? 'opacity-100' : 'opacity-0' %>" 
      alt="Background <%= i %>" />
  <% } %>
</div>

<div class="absolute inset-0 bg-black bg-opacity-60 -z-10"></div>

<div class="min-h-screen flex flex-col justify-center items-center px-4">
  <div class="w-full max-w-md bg-white bg-opacity-90 rounded-xl shadow-xl p-8 space-y-6">
    <h1 id="form-title" class="text-3xl font-bold text-center text-gray-800">LOGIN</h1>
    <p class="subtitle text-center text-gray-600">
      <span id="typed" class="text-blue-600"></span><span id="cursor" class="animate-pulse">|</span>
    </p>

    <!-- Login Form -->
    <form id="loginForm" class="space-y-4 active" autocomplete="off" novalidate>
      <input type="text" name="username" placeholder="Username" aria-label="Username" required autofocus
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />

      <div class="relative">
        <input type="password" id="loginPassword" name="password" placeholder="Password" aria-label="Password" required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
        <i class="ri-eye-line absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 cursor-pointer"
           onclick="togglePassword('loginPassword')" role="button" aria-label="Toggle Password Visibility" tabindex="0"></i>
      </div>

      <button type="submit"
        class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">MASUK</button>
      <button type="button" onclick="switchForm('register')"
        class="w-full py-2 px-4 border border-blue-600 text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition">DAFTAR</button>
    </form>

    <!-- Register Form -->
    <form id="registerForm" class="space-y-4 hidden" autocomplete="off" novalidate>
      <input type="text" name="username" placeholder="Username" aria-label="Username" required
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />

      <div class="relative">
        <input type="password" id="regPassword" name="password" placeholder="Password" aria-label="Password" required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
        <i class="ri-eye-line absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 cursor-pointer"
           onclick="togglePassword('regPassword')" role="button" aria-label="Toggle Password Visibility" tabindex="0"></i>
      </div>

      <div class="relative">
        <input type="password" id="regConfirm" name="confirmPassword" placeholder="Confirm Password" aria-label="Confirm Password" required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
        <i class="ri-eye-line absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 cursor-pointer"
           onclick="togglePassword('regConfirm')" role="button" aria-label="Toggle Password Visibility" tabindex="0"></i>
      </div>

      <button type="submit"
        class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">DAFTAR</button>
      <button type="button" onclick="switchForm('login')"
        class="w-full py-2 px-4 border border-blue-600 text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition">MASUK</button>
    </form>

    <footer class="pt-4 border-t border-gray-200">
      <div class="flex justify-center gap-6 text-xl text-gray-600">
        <a href="https://web.facebook.com/rayhanganteng.rayhanganteng.90" target="_blank" aria-label="Facebook"
          class="hover:text-blue-700"><i class="ri-facebook-fill"></i></a>
        <a href="https://wa.me/6282197770219" target="_blank" aria-label="WhatsApp"
          class="hover:text-green-500"><i class="ri-whatsapp-fill"></i></a>
        <a href="https://www.instagram.com/rhanray_/" target="_blank" aria-label="Instagram"
          class="hover:text-pink-500"><i class="ri-instagram-fill"></i></a>
        <a href="https://x.com/" target="_blank" aria-label="X (Twitter)"
          class="hover:text-gray-800"><i class="ri-twitter-x-line"></i></a>
      </div>
    </footer>
  </div>
</div>


  <script>// Slideshow background
  const slides = document.querySelectorAll('.slideshow-background img');
  let current = 0;
  function nextSlide() {
    slides[current].classList.remove('active');
    current = (current + 1) % slides.length;
    slides[current].classList.add('active');
  }
  setInterval(nextSlide, 4000);

  const typedEl = document.getElementById("typed");
  const cursor = document.getElementById("cursor");

  const texts = {
    login: "silahkan masukan username",
    register: "daftar username dan password"
  };

  let currentForm = 'login';
  let i = 0;
  let typingInterval;
  let resetTimeout;

  function typeText(text) {
    clearInterval(typingInterval);
    clearTimeout(resetTimeout);
    i = 0;
    typedEl.textContent = "";

    typingInterval = setInterval(() => {
      if (i < text.length) {
        typedEl.textContent += text.charAt(i);
        i++;
      } else {
        clearInterval(typingInterval);
        resetTimeout = setTimeout(() => {
          typedEl.textContent = "";
          i = 0;
          typeText(text); // loop ulang
        }, 4500);
      }
    }, 95); // Kecepatan ketik
  }

  // Mulai pertama kali
  typeText(texts.login);

  // Switch form
  function switchForm(target) {
    currentForm = target;
    document.getElementById('loginForm').classList.remove('active');
    document.getElementById('registerForm').classList.remove('active');
    document.getElementById(target + 'Form').classList.add('active');
    document.getElementById('form-title').textContent = target.toUpperCase();

    // Reset ketikan saat ganti form
    typeText(texts[target]);
  }

  // Toggle password visibility
  function togglePassword(id) {
    const input = document.getElementById(id);
    const icon = input.nextElementSibling;
    if (input.type === "password") {
      input.type = "text";
      icon.classList.remove('ri-eye-line');
      icon.classList.add('ri-eye-off-line');
    } else {
      input.type = "password";
      icon.classList.remove('ri-eye-off-line');
      icon.classList.add('ri-eye-line');
    }
  }

  // Optional: handle form submission here
  document.getElementById('loginForm').addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Login submitted!');
    // Add your login logic here
  });

  document.getElementById('registerForm').addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Register submitted!');
    // Add your register logic here
  });
  </script>
</body>
</html>
